<div class="bots">
  <ul class="list-group">
    <li class="list-group-item bot-row">
      <div class="bot-info">
        <img src= {{bot.imageUrl}} alt="" class="bot-image">
        <div class="bot__text-info">
          <div class="bot__name-site">
            <h3 class="bot__name">{{bot.name}}</h3>
            <a href="{{bot.websiteUrl}}" target="_blank" rel="noopener">{{fa-icon "fa-globe"}}</a>
          </div>
          <p class="bot__description">{{bot.description}}</p>
        </div>
      </div>
      <div class="bot-right">
        <div class="platforms">
          {{#if bot.implementations.isPending}}
            <span class="fa fa-spinner fa-2x fa-spin"></span>
          {{else}}
            {{#each bot.implementations as |implementation|}}
            {{#link-to 'index.platform' implementation.platform.id}}
            <img class="platform__icon" src= {{implementation.platform.logo}} alt="logo" />
            {{/link-to}}
            {{/each}}
          {{/if}}
        </div>
        <div class="like-button">
          <button class="btn btn-embossed btn-like ss-star {{if (exists-in-both currentUser.user.likeIds bot.likeIds) "btn-default btn-embossed" "btn-primary btn-embossed" }}" disabled= {{exists-in-both currentUser.user.likeIds bot.likeIds}} {{action addLike bot}}>
            <br> {{bot.likes.length}}
          </button>
        </div>
      </div>

      <button class="bot-row__close" {{action destroyBot bot}}><span class="fa fa-close"></span></button>
    </li>
  </ul>
</div>
